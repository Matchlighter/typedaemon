{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // "isolatedModules": true,
    "lib": ["es6", "dom", "es2017", "ES2020", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2018",

    "resolveJsonModule": true,

    "baseUrl": "src",
    "outDir": "build",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    ".git",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}